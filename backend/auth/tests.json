{
  "tests": [
    {
      "name": "Register new user with valid data",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "username": "testuser",
        "password": "Test1234",
        "full_name": "Test User",
        "age_confirmed": true,
        "terms_accepted": true
      },
      "expectedStatus": 201,
      "expectedBody": {
        "id": "number",
        "email": "test@example.com",
        "username": "testuser"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject weak password",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test2@example.com",
        "username": "testuser2",
        "password": "weak",
        "full_name": "Test User",
        "age_confirmed": true,
        "terms_accepted": true
      },
      "expectedStatus": 400
    }
  ]
}
